{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "node_modules/jquery/dist/jquery.min.js",
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "node_modules/jquery/dist/jquery.min.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "identity",
    "identity.email"
  ],
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "client/public/index.html"
  }
}